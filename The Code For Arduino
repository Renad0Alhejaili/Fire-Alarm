#include <DHT.h>

// Define the pins for each component
#define DHT_PIN 2
#define BUZZER_PIN 8
#define LED_PIN 7
#define SMOKE_PIN A0

#define DHT_TYPE DHT11  

DHT dht(DHT_PIN, DHT_TYPE);  // Initialize DHT sensor
int smoke_value = 0;
float temperature = 0;

void setup() {
  pinMode(BUZZER_PIN, OUTPUT);
  pinMode(LED_PIN, OUTPUT);
  Serial.begin(9600);

  dht.begin();  // Initialize the DHT sensor
}

void loop() {
  smoke_value = analogRead(SMOKE_PIN);  // Read the smoke sensor value
  temperature = dht.readTemperature();  // Get temperature from DHT sensor

  if (smoke_value > 500 || temperature > 30) {
    digitalWrite(BUZZER_PIN, HIGH);  // Turn on the buzzer
    digitalWrite(LED_PIN, HIGH);     // Turn on the LED light
    delay(1000);
  } else {
    digitalWrite(BUZZER_PIN, LOW);   // Turn off the buzzer
    digitalWrite(LED_PIN, LOW);      // Turn off the LED light
  }

  delay(1000);  // Wait before the next loop
}
